{
  "name": "@pokemon/root",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,js,jsx}\"",
    "start": "turbo start",
    "docker:web:start": "turbo run docker:web:start",
    "docker:scripts:db:sync": "turbo run docker:scripts:db:sync"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.3.0",
    "typescript": "5.5.4"
  },
  "packageManager": "bun@1.1.34"
}
